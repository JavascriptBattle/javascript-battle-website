<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h2><%= get('githubHandle') %></h2>
        <hr class="star-primary">
    </div>
    <ul class="nav nav-tabs nav-justified" role="tablist">
      <li class="settings"><a href="#">Settings</a></li>
      <li class="recentStats"><a href="#">Recent Stats</a></li>
      <li class="lifetimeStats"><a href="#">Lifetime Stats</a></li>
      <li class="averageStats"><a href="#">Average Stats</a></li>
    </ul>
    <div>
    <table class="table table-bordered table-responsive lifetime-table">
      <tr class="lifetime-table-header">
        <td>Category</td>
        <td>Stats</td>
      </tr>
      <tr>
        <td>Kills</td> 
        <td><%= get('lifetimeStats').kills %></td>
      </tr>
      <tr>
        <td>Deaths</td> 
        <td><%= get('lifetimeStats').deaths %></td>
      </tr>
      <tr>
        <td>Damage Dealt</td>
        <td><%= get('lifetimeStats').damageDealt %></td>
      </tr>
      <tr>
        <td>Mines Captured</td> 
        <td><%= get('lifetimeStats').minesCaptured %></td>
      </tr>
      <tr>
        <td>Diamonds Earned</td>
        <td><%= get('lifetimeStats').diamondsEarned %></td>
      </tr>
        <td>Health Recovered</td>
        <td><%= get('lifetimeStats').healthRecovered %></td>
      </tr>
      <tr>
        <td>Graves Robbed</td>
        <td><%= get('lifetimeStats').gravesRobbed %></td>
      </tr>
      <tr>
        <td>Wins</td>
        <td><%= get('lifetimeStats').wins %></td>
      </tr>
      <tr>
        <td>Losses</td>
        <td><%= get('lifetimeStats').losses %></td>
      </tr>
    </table>
    </div>
  </div>  
</div>